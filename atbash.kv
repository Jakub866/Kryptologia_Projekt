<Atbash_Page>:
    name: "AtbashPage"
    text_input: text_input
    keyphrase:keyphrase

    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 25,25


        Image:
            size_hint: 1,0.2
            source: "logo.png"

        Label:
            size_hint: 1, 0.1
            text: "Atbash Cipher"
            bold: True
            font_size: 18

        BoxLayout:
            orientation: 'horizontal'
            spacing: 25
            size: root.width, root.height

            BoxLayout:
                orientation: 'vertical'
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1
                    Line:
                        width: 1.5
                        rectangle: self.x, self.y, self.width, self.height

                GridLayout:
                    cols:2
                    size_hint:1,0.1
                    canvas.before:
                        Color:
                            rgba: 0, 0, 0, 1
                        Line:
                            width: 1.5
                            rectangle: self.x, self.y, self.width, self.height

                    FileChoose:
                        size_hint:0.3,0.1
                        text: "Load File"
                        on_release: self.choose()
                        multiline:True
                        canvas.before:
                            Color:
                                rgba: 0, 0, 0, 1
                            Line:
                                width: 1.5
                                rectangle: self.x, self.y, self.width, self.height

                    Label:
                        id: text_input
                        text: 'test'

                Label:
                    text: "Place holder for file"

                GridLayout:
                    cols: 2
                    size_hint: 1,0.1
                    canvas.before:
                        Color:
                            rgba: 0, 0, 0, 1
                        Line:
                            width: 1.5
                            rectangle: self.x, self.y, self.width, self.height


                    Label:
                        size_hint: 0.3,0.1
                        text: "Keyphrase"
                        canvas.before:
                            Color:
                                rgba: 0, 0, 0, 1
                            Line:
                                width: 1.5
                                rectangle: self.x, self.y, self.width, self.height

                    TextInput:
                        background_color: 0,0,0,0
                        foreground_color: 0,0,0,0.7
                        id: keyphrase
                        multiline:False

                Button:
                    size_hint:1,0.1
                    text: "Encrypt"



            BoxLayout:
                orientation: 'vertical'
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1
                    Line:
                        width: 1.5
                        rectangle: self.x, self.y, self.width, self.height


                GridLayout:
                    cols:2
                    size_hint:1,0.1
                    canvas.before:
                        Color:
                            rgba: 0, 0, 0, 1
                        Line:
                            width: 1.5
                            rectangle: self.x, self.y, self.width, self.height

                    FileChoose:
                        size_hint:0.3,0.1
                        text: "Load File"
                        on_release: self.choose()
                        multiline:False

                    Label:
                        id: text_input
                        text: 'test'



                Label:
                    text: "FILE TO DECRYPT?"



                GridLayout:
                    cols: 2
                    size_hint: 1,0.1
                    canvas.before:
                        Color:
                            rgba: 0, 0, 0, 1
                        Line:
                            width: 1.5
                            rectangle: self.x, self.y, self.width, self.height


                    Label:
                        size_hint: 0.3,0.1
                        text: "Keyphrase"
                        canvas.before:
                            Color:
                                rgba: 0, 0, 0, 1
                            Line:
                                width: 1.5
                                rectangle: self.x, self.y, self.width, self.height

                    TextInput:
                        background_color: 0,0,0,0
                        foreground_color: 0,0,0,0.7
                        id: keyphrase
                        multiline:False

                Button:
                    size_hint:1,0.1
                    text: "Decrypt"





        Button:
            size_hint:0.3,0.1
            text: "Back"
            on_press: root.manager.current = "MainPage"










<LoadDialog>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)

<SaveDialog>:
    text_input: text_input
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            on_selection: text_input.text = self.selection and self.selection[0] or ''

        TextInput:
            id: text_input
            size_hint_y: None
            height: 30
            multiline: False

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Save"
                on_release: root.save(filechooser.path, text_input.text)