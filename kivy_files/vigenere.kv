<Vigenere_Page>


    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 25,25


        Image:
            size_hint: 1,0.2
            source: "images//logo.png"

        Label:
            size_hint: 1, 0.1
            text: "Vigenere Cipher"
            bold: True
            font_size: 18


        BoxLayout:
            orientation: 'horizontal'
            spacing: 25
            size: root.width, root.height

            BoxLayout:
                orientation: 'vertical'
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1
                    Line:
                        width: 1.5
                        rectangle: self.x, self.y, self.width, self.height

                GridLayout:
                    cols:2
                    size_hint:1,0.1
                    canvas.before:
                        Color:
                            rgba: 0, 0, 0, 1
                        Line:
                            width: 1.5
                            rectangle: self.x, self.y, self.width, self.height

                    FileChoose:
                        size_hint:0.3,0.1
                        text: "Load File"
                        on_release: root.set()
                        padding_x: 5

                        multiline:True
                        canvas.before:
                            Color:
                                rgba: 0, 0, 0, 1
                            Line:
                                width: 1.5
                                rectangle: self.x, self.y, self.width, self.height
                    ScrollView:
                        Label:
                            text_size: None, self.height
                            size_hint_x: None
                            width: self.texture_size[0]
                            text: ":"
                            id: directory


                TextInput:
                    id: plaintext
                    background_color: 0,0,0,0
                    foreground_color: 0,0,0,0.7
                    text: "Place holder for file"

                GridLayout:
                    cols: 2
                    size_hint: 1,0.1
                    canvas.before:
                        Color:
                            rgba: 0, 0, 0, 1
                        Line:
                            width: 1.5
                            rectangle: self.x, self.y, self.width, self.height


                    Label:
                        size_hint: 0.3,0.1
                        text: "Keyphrase"
                        canvas.before:
                            Color:
                                rgba: 0, 0, 0, 1
                            Line:
                                width: 1.5
                                rectangle: self.x, self.y, self.width, self.height

                    TextInput:
                        background_color: 0,0,0,0
                        foreground_color: 0,0,0,0.7
                        id: keyphrase
                        multiline:False
                        text: "Klucz"

                GridLayout:
                    cols:2
                    size_hint:1, 0.1
                    Button:
                        text: "Encrypt"
                        on_press: root.encrypt(keyphrase,plaintext)
                    Button:
                        text: "Decrypt"
                        on_press: root.decrypt(keyphrase, plaintext)



            BoxLayout:
                orientation: 'vertical'
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1
                    Line:
                        width: 1.5
                        rectangle: self.x, self.y, self.width, self.height

                TextInput:
                    background_color: 0,0,0,0
                    foreground_color: 0,0,0,0.7
                    text: "Encrypted/Decrypted file"
                    id: output



                GridLayout:
                    cols: 2
                    size_hint: 1,0.1
                    canvas.before:
                        Color:
                            rgba: 0, 0, 0, 1
                        Line:
                            width: 1.5
                            rectangle: self.x, self.y, self.width, self.height



                    FileChoose:
                        size_hint:0.3,0.1
                        text: "Save File"
                        on_release: self.choose()
                        multiline:False
                        canvas.before:
                            Color:
                                rgba: 0, 0, 0, 1
                            Line:
                                width: 1.5
                                rectangle: self.x, self.y, self.width, self.height



        GridLayout:
            cols:2
            size_hint:1,0.1

            Button:
                size_hint:0.3,0.1
                text: "Back"
                on_press: root.manager.current = "main"
                on_press: root.refresh()


            Label:
                id: status
                text: ""
                color: 1,0,0,1


