#:import Factory kivy.factory.Factory

<SubtitPopup@Popup>:
    title: 'How to use Substitution Cipher'
    size_hint: (None, None)
    size: (400, 225)
    Label:
        text_size: self.width, None
        size_hint: 1, None
        height: self.texture_size[1]
        markup: True
        text: "This is a most common medieval used monoalphabetic cipher.\nYou can use one from this modes:\n \n 1. Load file and set encryption/decryption path\n 2. Insert text in left input box.\n \n If you use both, the loaded file will have a priority \n \n [b]Keyspace[/b]: All ASCII symbols"
        color:1,1,1,1


<Substitution_Page>

    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 25,25

        FloatLayout:
            size_hint: 1,0.3
            Image:
                source: "images//logo.png"
                pos_hint: {"x":0, "y":0}

            Button:
                size_hint: 0.1,0.2
                pos_hint: {"x":0.9, "y":0.9}
                text:"Help"
                on_release: Factory.SubtitPopup().open()


        Label:
            size_hint: 1, 0.1
            text: "Substitution Cipher"
            bold: True
            font_size: 18


        Label:
            text: "Choose the directory to encrypt"
            size_hint: 1,0.1


        GridLayout:
            cols: 2
            spacing: [20,0]
            size_hint: 1,0.1

            GridLayout:
                cols:2
                size_hint:1,0.1
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1
                    Line:
                        width: 1.5
                        rectangle: self.x, self.y, self.width, self.height

                FileChoose:
                    size_hint:0.3,0.1
                    text: "Load File"
                    on_release: root.set_load()
                    padding_x: 5

                    multiline:True
                    canvas.before:
                        Color:
                            rgba: 0, 0, 0, 1
                        Line:
                            width: 1.5
                            rectangle: self.x, self.y, self.width, self.height

                ScrollView:
                    Label:
                        halign: 'center'
                        valign: 'center'
                        text_size: None, self.height
                        size_hint_x: None
                        width: self.texture_size[0]
                        text: ""
                        id: loadDirectory

            GridLayout:
                cols:2
                size_hint:1,0.1
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1
                    Line:
                        width: 1.5
                        rectangle: self.x, self.y, self.width, self.height

                FileChoose:
                    size_hint:0.3,0.1
                    text: "Save File"
                    on_release: root.set_save()
                    padding_x: 5

                    multiline:True
                    canvas.before:
                        Color:
                            rgba: 0, 0, 0, 1
                        Line:
                            width: 1.5
                            rectangle: self.x, self.y, self.width, self.height

                ScrollView:
                    Label:
                        halign: 'center'
                        valign: 'center'
                        text_size: None, self.height
                        size_hint_x: None
                        width: self.texture_size[0]
                        text: ":"
                        id: saveDirectory


        Label:
            text: "Or use input boxes"
            size_hint: 1,0.1

        GridLayout:
            cols: 2
            spacing: [20,0]
            size_hint: 1,0.5
            BoxLayout:
                orientation: "vertical"

                Label:
                    size_hint: 1,0.2
                    text:"Input"
                    canvas.before:
                        Color:
                            rgba: 0,0,0,1
                        Line:
                            width: 1.5
                            rectangle: self.x, self.y, self.width, self.height

                TextInput:
                    id: input
                    background_color: 0,0,0,0
                    foreground_color: 0,0,0,0.7
                    canvas.before:
                        Color:
                            rgba: 0,0,0,1
                        Line:
                            width: 1.5
                            rectangle: self.x, self.y, self.width, self.height



            BoxLayout:
                orientation: "vertical"
                Label:
                    size_hint: 1,0.2
                    text:"Output"
                    canvas.before:
                        Color:
                            rgba: 0,0,0,1
                        Line:
                            width: 1.5
                            rectangle: self.x, self.y, self.width, self.height

                TextInput:
                    background_color: 0,0,0,0
                    foreground_color: 0,0,0,0.7
                    id:output
                    canvas.before:
                        Color:
                            rgba: 0,0,0,1
                        Line:
                            width: 1.5
                            rectangle: self.x, self.y, self.width, self.height

        GridLayout:
            cols:2
            size_hint: 1,0.1

            Label:
                size_hint: 0.15,1
                text:"Keyphrase"
                canvas.before:
                    Color:
                        rgba: 0,0,0,1
                    Line:
                        width: 1.5
                        rectangle: self.x, self.y, self.width, self.height

            TextInput:
                id: keyphrase
                background_color: 0,0,0,0
                foreground_color: 0,0,0,0.7
                canvas.before:
                    Color:
                        rgba: 0,0,0,1
                    Line:
                        width: 1.5
                        rectangle: self.x, self.y, self.width, self.height


        GridLayout:
            cols:2
            size_hint: 1, 0.1
            Button:
                text: "Encrypt"
                on_press: root.enc_dec_algorithm(keyphrase,input,4,2)
            Button:
                text: "Decrypt"
                on_press: root.enc_dec_algorithm(keyphrase,input,4,1)

        GridLayout:
            cols:2
            size_hint:1,0.1

            Button:
                size_hint:0.3,0.1
                text: "Back"
                on_press: root.refresh()
                on_release: root.manager.current = "main"


            Label:
                id: status
                text: ""
                color: 1,0,0,1
                font_size:20
