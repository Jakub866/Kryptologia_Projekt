#:include ceasar.kv
#:include atbash.kv
#:include veginere.kv
#:include substitution.kv
#:include vernam.kv



WindowManager:
    Main_page:
        name: "main"
    Caesar_Page:
        name: "cezar"
    Atbash_Page:
    Veginere_Page:
    Substitution_Page:
    Vernam_Page:



<Label>
    color: 0,0,0,1

<Main_page>:
    name: "main"

    GridLayout:
        size: root.width, root.height
        spacing: 10
        padding:25, 10
        cols:1
        canvas.before:
            Color:
                rgb: (1,0,0,1)


        Image:
            source: "logo.png"
            size_hint_y: None
            height: 300

        Label:
            text: "Choose your cypher!"
            font_size: self.width/25
        Button:
            text: "Ceasar Cipher"
            id: Ceasar
            background_normal: ''

            on_press: app.root.current = "cezar"



        Button:
            text: "Atbash"
            id: Atbash
            on_press: app.root.current = "AtbashPage"
            background_normal: ''


        Button:
            text: "Veginere Cypher"
            id: Veginere
            on_press: app.root.current = "VeginerePage"
            background_normal: ''


        Button:
            text: "Substitution Cypher"
            id: Substitution
            on_press: app.root.current = "SubstitutionPage"
            background_normal: ''


        Button:
            text: "Vernam Cypher"
            id: Vernam
            on_press: app.root.current = "VernamPage"
            background_normal: ''



        GridLayout:
            cols:3

            Image:
                source: "GitHub.png"
                size_hint_y: None
                height: 100
            Label:
                text: "Developed by"
                size_hint_y: None
                height: 100
            Image:
                source: "awl.jpg"
                size_hint_y: None
                height: 100




