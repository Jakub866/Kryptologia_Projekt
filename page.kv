<Label>
    color: 0,0,0,1







<Main_page>

    GridLayout:
        size: root.width, root.height
        spacing: 10
        padding:25, 10
        cols:1
        canvas.before:
            Color:
                rgb: (1,0,0,1)


        Image:
            source: "logo.png"
            size_hint_y: None
            height: 300

        Label:
            text: "Choose your cypher!"
            font_size: self.width/25
        Button:
            text: "Ceasar Cypher"
            id: Ceasar
            background_normal: ''

            on_press: root.manager.current = "CaesarPage"



        Button:
            text: "Atbash"
            id: Atbash
            on_press: root.manager.current = "AtbashPage"
            background_normal: ''


        Button:
            text: "Veginere Cypher"
            id: Veginere
            on_press: root.manager.current = "VeginerePage"
            background_normal: ''


        Button:
            text: "Substitution Cypher"
            id: Substitution
            on_press: root.manager.current = "SubstitutionPage"
            background_normal: ''


        Button:
            text: "Vernam Cypher"
            id: Vernam
            on_press: root.manager.current = "VernamPage"
            background_normal: ''



        GridLayout:
            cols:3

            Image:
                source: "GitHub.png"
                size_hint_y: None
                height: 100
            Label:
                text: "Developed by"
                size_hint_y: None
                height: 100
            Image:
                source: "awl.jpg"
                size_hint_y: None
                height: 100




